[Unit]
Description=lcd service
After=bmdstreamer.service

[Service]
ExecStart=/usr/bin/links2 -g -html-auto-refresh 1 -menu-font-size 1 -driver directfb file:///mnt/ssd/statuspage/output.html
ExecReload=/bin/kill -HUP $MAINPID
KillMode=control-group
KillSignal=SIGKILL
Restart=always
WatchdogSec=120

[Install]
WantedBy=multi-user.target
