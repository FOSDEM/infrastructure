[Unit]
Description=Prometheus Node Exporter

[Service]
User={{ prometheus_user }}
Group={{ prometheus_group }}
ExecStart={{ prometheus_path }}/prometheus -config.file {{ prometheus_config_path }}/prometheus.yml -storage.local.path {{ prometheus_db_path }} -web.listen-address 'localhost:9090' -alertmanager.url 'http://localhost:9093'
ExecReload=/bin/kill -HUP $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
