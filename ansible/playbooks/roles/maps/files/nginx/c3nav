server {
    listen 80;
    server_name nav-test.fosdem.org;
    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        alias /opt/c3nav/src/c3nav/static.dist/;
    }
    location /media/ {
        alias /opt/c3nav/src/c3nav/media/;
    }
    location / {
        include proxy_params;
        proxy_pass http://unix:/var/run/gunicorn-c3nav.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/nav-test.fosdem.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/nav-test.fosdem.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
