#!/usr/sbin/nft -f

{{ ansible_managed | comment }}

flush ruleset

table inet filter {
	chain input {
		type filter hook input priority 0; policy accept;
		ip saddr != 172.20.22.210/24 tcp dport sunrpc drop
		ip saddr != 172.20.22.210/24 udp dport sunrpc drop
	}

	chain forward {
		type filter hook forward priority 0; policy accept;
	}

	chain output {
		type filter hook output priority 0; policy accept;
	}
}
