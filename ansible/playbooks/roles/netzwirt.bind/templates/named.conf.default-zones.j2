// {{ansible_managed}}

// prime the server with knowledge of the root servers
zone "." {
	type hint;
	file "{{bind_config_dir}}/db.root";
};

// be authoritative for the localhost forward and reverse zones, and for
// broadcast zones as per RFC 1912

zone "localhost" {
	type master;
	file "{{bind_config_dir}}/db.local";
};

zone "127.in-addr.arpa" {
	type master;
	file "{{bind_config_dir}}/db.127";
};

zone "0.in-addr.arpa" {
	type master;
	file "{{bind_config_dir}}/db.0";
};

zone "255.in-addr.arpa" {
	type master;
	file "{{bind_config_dir}}/db.255";
};
